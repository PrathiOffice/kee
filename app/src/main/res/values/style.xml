<resources xmlns:android="http://schemas.android.com/tools" android:ignore="NamespaceTypo">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">#F63074</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Testings" parent="AppTheme">
        <item name="colorPrimary">#F63074</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>
    <style name="SlideActivityAnimation" parent="@android:style/Animation.Activity">
    </style>


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="android:layout_gravity">end</item>

        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>

    </style>

    <style name="AppTheme.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorHint">#999</item>
    </style>
    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="mySpinnerItemStyle2" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
    </style>
    <style name="mySpinnerItemStyle1" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">#FFF</item>

    </style>
    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">#FFF</item>
        <item name="android:textColorSecondary">#FFF</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="NotificationUIText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowColor">@color/transparent_75_white</item>
    </style>
    <style name="AppThemeDark" parent="Theme.AppCompat" />
    <style name="AppThemeLight" parent="Theme.AppCompat.Light" />
    <style name="AppThemeLight.DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar" />


    <style name="popwindow_anim">

    </style>
</resources>
